{
  "manifest_version": 3,
  "name": "IOTA Wallet",
  "description": "A simple IOTA wallet for small transactions on the internet.",
  "background": {
    "service_worker": "worker.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    }
  ]
}